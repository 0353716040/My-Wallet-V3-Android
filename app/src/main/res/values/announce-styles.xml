<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AnnounceCardStyle" parent="DefaultCardStyle">
        <item name="cardBackgroundColor">@color/announce_background</item>
    </style>

    <style name="AnnounceTitle" parent="BaseTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AnnounceBody" parent="BaseTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:gravity">top</item>
        <item name="android:translationY">-3.53sp</item>
    </style>

    <style name="AnnounceCtaButton" parent="ButtonStyle">
        <item name="android:background">@color/blue_600</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AnnounceCta2Button" parent="ButtonStyle">
        <item name="android:background">@color/announce_background</item>
        <item name="android:textColor">@color/blue_600</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
