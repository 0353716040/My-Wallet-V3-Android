<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/asset_icon"
        android:layout_width="@dimen/grid_8"
        android:layout_height="@dimen/grid_8"
        android:importantForAccessibility="no"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/vector_bitcoin_colored" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/account_icon"
        android:layout_width="@dimen/grid_4"
        android:layout_height="@dimen/grid_4"
        android:background="@drawable/white_circle"
        android:padding="1dp"
        app:layout_constraintCircle="@id/asset_icon"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_non_custodial_account_indicator" />

</androidx.constraintlayout.widget.ConstraintLayout>