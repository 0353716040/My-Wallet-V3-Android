<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blockchain_blue"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/button_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="16dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_settings_white_24dp"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/pinentry_logo_size"
            android:maxWidth="@dimen/pinentry_logo_size"
            android:src="@drawable/logo3x" />

        <piuk.blockchain.android.ui.customviews.NonSwipeableViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1" />
    </LinearLayout>
</layout>
