<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blockchain_blue"
    tools:context=".PinEntryView"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="124dp"
            android:layout_height="113dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:src="@drawable/logo3x"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:paddingTop="24dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/pinBox0"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_margin="10dip"
                    android:background="@drawable/rounded_view_blue_white_border"
                    />

                <TextView
                    android:id="@+id/pinBox1"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_margin="10dip"
                    android:background="@drawable/rounded_view_blue_white_border"
                    />

                <TextView
                    android:id="@+id/pinBox2"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_margin="10dip"
                    android:background="@drawable/rounded_view_blue_white_border"
                    />

                <TextView
                    android:id="@+id/pinBox3"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_margin="10dip"
                    android:background="@drawable/rounded_view_blue_white_border"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/titleBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:padding="10dip"
                android:text="@string/pin_entry"
                android:textColor="@color/white_50"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/statusMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dip"
                android:text=""
                android:textColor="@color/blockchain_send_red"
                android:textSize="20sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:orientation="horizontal"
                >

                <TableLayout
                    android:id="@+id/numericPad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/blockchain_navigation_bar"
                    android:gravity="center_horizontal"
                    android:shrinkColumns="*"
                    android:stretchColumns="*"
                    >

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:id="@+id/button1"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/selector_pearl_white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:tag="1"
							android:onClick="padClicked"
                            android:padding="@dimen/pinentry_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="1"
                                android:textColor="@color/blockchain_blue"
                                android:textSize="@dimen/pinentry_num_text_size"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text=" "
                                android:textColor="@color/blockchain_grey"
                                android:textSize="@dimen/pinentry_alpha_text_size"
                                >
                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/button2"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
							android:background="@drawable/selector_pearl_white"
                            android:gravity="center"
                            android:tag="2"
							android:onClick="padClicked"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="2"
                                android:textColor="@color/blockchain_blue"
                                android:textSize="@dimen/pinentry_num_text_size"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="ABC"
                                android:textColor="@color/blockchain_grey"
                                android:textSize="@dimen/pinentry_alpha_text_size"
                                >
                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/button3"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
							android:background="@drawable/selector_pearl_white"
                            android:gravity="center"
                            android:tag="3"
							android:onClick="padClicked"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="3"
                                android:textColor="@color/blockchain_blue"
                                android:textSize="@dimen/pinentry_num_text_size"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="DEF"
                                android:textColor="@color/blockchain_grey"
                                android:textSize="@dimen/pinentry_alpha_text_size"
                                >
                            </TextView>

                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:id="@+id/button4"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
							android:background="@drawable/selector_pearl_white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:tag="4"
							android:onClick="padClicked"
                            android:padding="@dimen/pinentry_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="4"
                                android:textColor="@color/blockchain_blue"
                                android:textSize="@dimen/pinentry_num_text_size"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="GHI"
                                android:textColor="@color/blockchain_grey"
                                android:textSize="@dimen/pinentry_alpha_text_size"
                                >
                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/button5"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
							android:background="@drawable/selector_pearl_white"
                            android:gravity="center"
                            android:tag="5"
							android:onClick="padClicked"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="5"
                                android:textColor="@color/blockchain_blue"
                                android:textSize="@dimen/pinentry_num_text_size"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="JKL"
                                android:textColor="@color/blockchain_grey"
                                android:textSize="@dimen/pinentry_alpha_text_size"
                                >
                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/button6"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
							android:background="@drawable/selector_pearl_white"
                            android:gravity="center"
                            android:tag="6"
							android:onClick="padClicked"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="6"
                                android:textColor="@color/blockchain_blue"
                                android:textSize="@dimen/pinentry_num_text_size"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="MNO"
                                android:textColor="@color/blockchain_grey"
                                android:textSize="@dimen/pinentry_alpha_text_size"
                                >
                            </TextView>

                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:id="@+id/button7"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
							android:background="@drawable/selector_pearl_white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:tag="7"
							android:onClick="padClicked"
                            android:padding="@dimen/pinentry_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="7"
                                android:textColor="@color/blockchain_blue"
                                android:textSize="@dimen/pinentry_num_text_size"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="PQRS"
                                android:textColor="@color/blockchain_grey"
                                android:textSize="@dimen/pinentry_alpha_text_size"
                                >
                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/button8"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
							android:background="@drawable/selector_pearl_white"
                            android:gravity="center"
                            android:tag="8"
							android:onClick="padClicked"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="8"
                                android:textColor="@color/blockchain_blue"
                                android:textSize="@dimen/pinentry_num_text_size"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="TUV"
                                android:textColor="@color/blockchain_grey"
                                android:textSize="@dimen/pinentry_alpha_text_size"
                                >
                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/button9"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
							android:background="@drawable/selector_pearl_white"
                            android:gravity="center"
                            android:tag="9"
							android:onClick="padClicked"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="9"
                                android:textColor="@color/blockchain_blue"
                                android:textSize="@dimen/pinentry_num_text_size"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="WXYZ"
                                android:textColor="@color/blockchain_grey"
                                android:textSize="@dimen/pinentry_alpha_text_size"
                                >
                            </TextView>

                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:id="@+id/button10"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
							android:background="@drawable/selector_pearl_white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/pinentry_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text=" "
                                android:textColor="@color/blockchain_blue"
                                android:textSize="@dimen/pinentry_num_text_size"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text=" "
                                android:textColor="@color/blockchain_grey"
                                android:textSize="@dimen/pinentry_alpha_text_size"
                                >
                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/button0"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
							android:background="@drawable/selector_pearl_white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:tag="0"
							android:onClick="padClicked"
                            android:padding="9dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="0"
                                android:textColor="@color/blockchain_blue"
                                android:textSize="@dimen/pinentry_num_text_size"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:text=" "
                                android:textColor="@color/blockchain_grey"
                                android:textSize="@dimen/pinentry_alpha_text_size"
                                >
                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/buttonDeleteBack"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
							android:background="@drawable/selector_pearl_white"
                            android:gravity="center"
                            android:orientation="vertical"
							android:onClick="cancelClicked"
                            android:padding="9dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:src="@drawable/ic_backspace_grey600_36dp"
                                >
                            </ImageView>

                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>