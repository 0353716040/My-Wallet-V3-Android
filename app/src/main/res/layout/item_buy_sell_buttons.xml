        android:fontFamily="@font/montserrat"
        app:srcCompat="@drawable/vector_cart_buy"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:paddingBottom="16dp"
        android:text="@string/buy_sell_buy"
        android:textColor="@color/primary_navy_medium"
        android:theme="@style/PlainTheme"
        app:layout_constraintEnd_toStartOf="@id/view_divider_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


