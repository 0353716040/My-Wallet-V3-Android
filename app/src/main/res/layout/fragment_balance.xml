<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

	<com.sothree.slidinguppanel.SlidingUpPanelLayout
		android:id="@+id/sliding_layout"
		xmlns:sothree="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="bottom"
		sothree:umanoDragView="@+id/dragView"
		sothree:umanoOverlay="true"
		sothree:umanoPanelHeight="96dp"
		sothree:umanoParalaxOffset="100dp"
		sothree:umanoInitialState="hidden"
		sothree:umanoShadowHeight="4dp">

		<!-- MAIN CONTENT -->
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#FFf3f3f3">

			<LinearLayout
				android:id="@+id/balance_main_content_shadow"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:alpha="0.5"
				android:background="#000000"
				android:orientation="horizontal"/>

			<LinearLayout
				android:id="@+id/balance_main_content"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="#FFf3f3f3"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="#FFf3f3f3"
					android:orientation="vertical"
					>

					<include
						android:id="@+id/balanceLayout"
						layout="@layout/balance_layout"/>

					<!-- accounts list -->
					<LinearLayout
						android:id="@+id/accountsLayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@color/blockchain_blue"
						android:orientation="vertical"
						>

						<ListView
							android:id="@+id/accountsList"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							/>
					</LinearLayout>

					<LinearLayout
						android:id="@+id/iconsLayout2"
						android:layout_width="match_parent"
						android:layout_height="2dp"
						android:background="@color/blockchain_blue"
						android:orientation="horizontal"
						android:paddingLeft="3dp"
						android:paddingRight="3dp"
						>

						<LinearLayout
							android:id="@+id/iconsReceive2"
							android:layout_width="0dp"
							android:layout_height="2dp"
							android:layout_weight="1"
							android:background="@color/blockchain_blue"
							android:orientation="vertical"
							/>

						<LinearLayout
							android:id="@+id/iconsHome2"
							android:layout_width="0dp"
							android:layout_height="2dp"
							android:layout_weight="1"
							android:background="@color/blockchain_light_blue"
							android:orientation="vertical"
							/>

						<LinearLayout
							android:id="@+id/iconsSend2"
							android:layout_width="0dp"
							android:layout_height="2dp"
							android:layout_weight="1"
							android:background="@color/blockchain_blue"
							android:orientation="vertical"
							/>
					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="5dp"
						android:background="@color/blockchain_blue"
						android:orientation="horizontal"
						/>

					<!-- anchor & tx list -->
					<LinearLayout
						android:id="@+id/anchor"
						android:layout_width="match_parent"
						android:layout_height="fill_parent"
						android:background="@color/blockchain_light_grey"
						android:orientation="vertical"
						>

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="65dp"
							android:layout_gravity="center_horizontal|center_vertical"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="horizontal"
							>

							<TextView
								android:id="@+id/swipe"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center_horizontal|center_vertical"
								android:gravity="center_horizontal|center_vertical"
								android:textColor="#FF808080"
								android:textSize="18dp"
								/>
						</LinearLayout>

						<ListView
							android:id="@+id/txList"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_marginLeft="10dp"
							android:divider="@drawable/list_divider"
							android:listSelector="@android:color/transparent"
							/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

		</RelativeLayout>

		<!-- SLIDING LAYOUT -->
		<LinearLayout
			android:id="@+id/dragView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:clickable="true"
			android:focusable="false"
			android:orientation="vertical"
			android:background="#FFffff">

			<LinearLayout
				android:id="@+id/bottom_sel1"
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:layout_gravity="center_horizontal|center_vertical"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_gravity="center_horizontal|center_vertical"
					android:layout_marginLeft="10dp"
					android:layout_weight="1"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal"
					>

					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal|center_vertical"
						android:gravity="center_horizontal|center_vertical"
						android:src="@drawable/icon_send"
						/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_gravity="center_horizontal|center_vertical"
					android:layout_weight="6"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal"
					>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="center"
						android:text="@string/send_bitcoin"
						android:textColor="#FF000000"
						android:textSize="16dp"
						/>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/bottom_sel2"
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:layout_gravity="center_horizontal|center_vertical"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_gravity="center_horizontal|center_vertical"
					android:layout_marginLeft="10dp"
					android:layout_weight="1"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal"
					>

					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal|center_vertical"
						android:gravity="center_horizontal|center_vertical"
						android:src="@drawable/icon_receive"
						/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_gravity="center_horizontal|center_vertical"
					android:layout_weight="6"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal"
					>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="center"
						android:text="@string/receive_bitcoin"
						android:textColor="#FF000000"
						android:textSize="16dp"
						/>
				</LinearLayout>
			</LinearLayout>

		</LinearLayout>

	</com.sothree.slidinguppanel.SlidingUpPanelLayout>

</RelativeLayout>
