<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <piuk.blockchain.android.ui.customviews.account.AccountInfoGroup
        android:id="@+id/account_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <piuk.blockchain.android.ui.customviews.account.StatusInfoLine
        android:id="@+id/group_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/smallest_margin"
        android:visibility="gone" />

</LinearLayout>