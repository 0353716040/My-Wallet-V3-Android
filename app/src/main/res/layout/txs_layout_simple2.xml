<RelativeLayout
	style="?android:attr/borderlessButtonStyle"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="72dp"
	android:background="@drawable/selector_pearl_white_tx"
	android:gravity="start">

	<FrameLayout
		android:id="@+id/tx_row"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/selector_pearl_white_tx"
		android:clickable="true">

		<View
			android:id="@+id/top_seperator"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_gravity="top"
			android:background="@color/blockchain_light_grey"/>

		<TextView
			android:id="@+id/ts"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="top"
			android:paddingLeft="@dimen/left_tx_padding"
			android:paddingRight="16dp"
			android:layout_marginTop="16dp"
			android:fontFamily="sans-serif"
			android:singleLine="true"
			android:text="April 2015"
			android:textColor="@color/primary_text_default_material_light"
			android:textSize="14sp"/>

		<TextView
			android:id="@+id/direction"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="top"
			android:paddingLeft="@dimen/left_tx_padding"
			android:paddingRight="16dp"
			android:layout_marginTop="37dp"
			android:fontFamily="sans-serif"
			android:text="Sent"
			android:textColor="@color/blockchain_grey"
			android:textSize="16sp"/>

		<TextView
			android:id="@+id/result"
			android:layout_width="wrap_content"
			android:minWidth="120dp"
			android:layout_height="32dp"
			android:gravity="center_horizontal|center_vertical"
			android:layout_gravity="bottom|right"
			android:layout_marginEnd="16dp"
			android:layout_marginRight="16dp"
			android:layout_marginBottom="16dp"
			android:fontFamily="sans-serif"
			android:text="result"
			android:background="@drawable/rounded_view_green"
			android:textColor="@color/white"
			android:textSize="14sp"/>

		<include
			layout="@layout/include_txs_details"
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:layout_centerVertical="true"
			android:layout_gravity="top"
			android:visibility="invisible"/>

		<View
			android:id="@+id/bottom_seperator"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_gravity="bottom"
			android:visibility="invisible"
			android:background="@color/blockchain_light_grey"/>

	</FrameLayout>
</RelativeLayout>