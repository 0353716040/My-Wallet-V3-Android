<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- MAIN LAYOUT-->
    <RelativeLayout
        android:id="@+id/activity_contact_pairing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="piuk.blockchain.android.ui.contacts.ContactInviteActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_general" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_invite"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:text="@string/contacts_invite_someone"
                android:theme="@style/ButtonBlue" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_accept"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:text="@string/contacts_being_invited"
                android:theme="@style/ButtonBlue" />

        </LinearLayout>
    </RelativeLayout>
</layout>
