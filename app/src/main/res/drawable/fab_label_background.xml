<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/blockchain_transfer_blue" />
            <stroke android:width="1dp" android:color="@color/blockchain_dark_blue" />
            <padding android:left="16dp" android:top="4dp" android:right="16dp" android:bottom="4dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/blockchain_blue" />
            <stroke android:width="1dp" android:color="@color/blockchain_dark_blue" />
            <padding android:left="16dp" android:top="4dp" android:right="16dp" android:bottom="4dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</selector>